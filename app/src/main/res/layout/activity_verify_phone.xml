<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6EDF3"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_backgroud" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:layout_marginBottom="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/register_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txtCodeVerfiy"
        android:layout_centerInParent="true"
        android:text="@string/verification_code"
        android:textColor="#113e56"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/txtCodeVerfiy"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:inputType="phone"
        android:maxLength="10"
        android:textColorHint="#113E56"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnConfirmVerfiy"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCodeVerfiy"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/button_shape_corners"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="15sp"
        android:visibility="gone" />
</RelativeLayout>

