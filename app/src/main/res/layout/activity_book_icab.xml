<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wolfsoft.kcab.Book_icab">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/googleMap"
            android:name="com.google.android.gms.maps.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="92.2dp"
            android:layout_marginLeft="19.2dp"
            android:layout_marginTop="87.9dp"
            android:layout_marginRight="19.2dp"
            app:cardCornerRadius="5.8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/i1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="14.4dp"
                        android:layout_marginTop="16.3dp"
                        android:src="@drawable/pin_black" />

                    <ImageView
                        android:id="@+id/i2"
                        android:layout_width="2dp"
                        android:layout_height="26.9dp"
                        android:layout_marginLeft="26dp"
                        android:layerType="software"
                        android:src="@drawable/rect_dotted" />

                    <ImageView
                        android:id="@+id/i3"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="19dp"
                        android:src="@drawable/navigatiob_blue" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15.4dp"
                    android:orientation="vertical">

                    <com.psut.pool.customfonts.TextViewSFProDisplayRegular
                        android:id="@+id/txtmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14.3dp"
                        android:text="16th Avenue, 4th Cross Street, Chennai"
                        android:textColor="#323643"
                        android:textSize="13.4sp" />

                    <com.psut.pool.customfonts.TextViewSFProDisplayRegular
                        android:id="@+id/txthome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14.3dp"
                        android:layout_marginTop="30dp"
                        android:text="Home"
                        android:textColor="#323643"
                        android:textSize="13.4sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="17.4dp"
                        android:src="@drawable/x" />

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="36.4dp"
                        android:src="@drawable/x" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <include layout="@layout/toolbar_home_icab" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="150.8dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/racta"
                android:scrollbars="none">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150.8dp"
                    android:layout_marginRight="20dp"
                    app:cardCornerRadius="5.8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19.4dp"
                        android:orientation="vertical">

                        <com.psut.pool.customfonts.MyTextView_SF_Pro_Display_Semibold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11.2dp"
                            android:background="@drawable/rect_black"
                            android:text="SEDAN"
                            android:textColor="#ffffff"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/car1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/car" />

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="8dp"
                            android:text="$2.98"
                            android:textColor="#606470"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="109.4dp"
                        android:orientation="vertical">

                        <com.psut.pool.customfonts.MyTextView_SF_Pro_Display_Semibold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11.2dp"
                            android:background="@drawable/rect_black"
                            android:text="HATCHBACK"
                            android:textColor="#ffffff"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/car2"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginLeft="22dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/car3" />


                        <com.psut.pool.customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="32dp"
                            android:layout_marginTop="8dp"
                            android:text="$1.98"
                            android:textColor="#606470"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="239.4dp"
                        android:orientation="vertical">

                        <customfonts.MyTextView_SF_Pro_Display_Semibold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="11.2dp"
                            android:background="@drawable/rect_black"
                            android:text="VAN"
                            android:textColor="#ffffff"
                            android:textSize="14sp" />


                        <ImageView
                            android:id="@+id/car3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/car3" />


                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:text="$4.98"
                            android:textColor="#606470"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="329.4dp"
                        android:orientation="vertical">

                        <com.psut.pool.customfonts.MyTextView_SF_Pro_Display_Semibold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="11.2dp"
                            android:background="@drawable/rect_black"
                            android:text="SUV"
                            android:textColor="#ffffff"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/car4"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="4dp"
                            android:src="@drawable/car3" />

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="8dp"
                            android:text="$4.98"
                            android:textColor="#606470"
                            android:textSize="14sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </HorizontalScrollView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <com.psut.pool.customfonts.Button_SF_Pro_Display_Medium
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="19.3dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="18.1dp"
                android:background="@drawable/rect_blue"
                android:text="Confirm Pickup"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="15.4sp" />
        </RelativeLayout>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>
