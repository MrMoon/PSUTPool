<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linLayoutHomeMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/linLayoutBottomMain"
        android:background="#fff"
        android:orientation="vertical"></LinearLayout>

    <View
        style="@style/Divider"
        android:layout_above="@id/linLayoutBottomMain" />

    <LinearLayout
        android:id="@+id/linLayoutBottomMain"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:background="#F8FAFB"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCarMain"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_directions_car_black_24dp" />

        <ImageView
            android:id="@+id/imgOfferMain"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_local_offer_gray_24dp" />

        <ImageView
            android:id="@+id/imgNotificationMain"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_notifications_gray_24dp" />

        <ImageView
            android:id="@+id/imgAccountMain"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_account_circle_gray_24dp" />
    </LinearLayout>
</RelativeLayout>