<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="92.2dp"
        android:layout_marginStart="19.3dp"
        android:layout_marginTop="18.7dp"
        android:layout_marginEnd="12.1dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="5.8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/i1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="14.4dp"
                    android:layout_marginTop="16.3dp"
                    android:src="@drawable/pin_black"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/i2"
                    android:layout_width="2dp"
                    android:layout_height="26.9dp"
                    android:layout_marginStart="26dp"
                    android:layerType="software"
                    android:src="@drawable/rect_dotted"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/i3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:src="@drawable/navigatiob_blue"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="143dp"
                android:layout_height="78dp"
                android:layout_marginTop="15.4dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtmall"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14.3dp"
                    android:maxLines="1"
                    android:scrollbars="horizontal"
                    android:text=""
                    android:textColor="#323643"
                    android:textSize="13.4sp" />

                <TextView
                    android:id="@+id/txthome"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14.3dp"
                    android:layout_marginTop="30dp"
                    android:maxLines="1"
                    android:scrollbars="horizontal"
                    android:text=""
                    android:textColor="#323643"
                    android:textSize="13.4sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtdate"
                    android:layout_width="117dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="15.4dp"
                    android:layout_marginEnd="10dp"
                    android:text=""
                    android:textColor="#323643"
                    android:textSize="13.4sp" />

                <RatingBar
                    android:id="@+id/rtbHighScoreHistory"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:isIndicator="false"
                    android:max="100"
                    android:minHeight="10dp"
                    android:numStars="5"
                    android:progressTint="#ffba00"
                    android:rating="0"
                    android:stepSize="0.2" />

                <TextView
                    android:id="@+id/txtprice"
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="5.4dp"
                    android:layout_marginEnd="10dp"
                    android:text=""
                    android:textColor="#323643"
                    android:textSize="13.4sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/txtDriverIDHistory"
        android:layout_width="53dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="5.4dp"
        android:layout_marginEnd="10dp"
        android:text=""
        android:textColor="#323643"
        android:textSize="13.4sp"
        tools:visibility="gone" />
</LinearLayout>